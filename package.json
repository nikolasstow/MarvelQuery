  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.2",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.1.0",
    "typescript": "~5.4.2"
  },
  "dependencies": {
    "axios": "^1.7.2",
